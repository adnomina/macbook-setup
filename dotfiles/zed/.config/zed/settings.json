{
  "agent_servers": {
    "opencode": {
      "type": "registry"
    },
    "github-copilot": {
      "type": "registry"
    }
  },
  "collaboration_panel": {
    "default_width": 300.0
  },
  "notification_panel": {
    "default_width": 300.0
  },
  "git_panel": {
    "default_width": 300.0
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "terminal": {
    "keep_selection_on_copy": false,
    "copy_on_select": true,
    "option_as_meta": true
  },
  "project_panel": {
    "default_width": 300.0,
    "indent_guides": {
      "show": "never"
    },
  },
  "use_system_window_tabs": true,
  "tabs": {
    "show_diagnostics": "all",
    "file_icons": true,
    "git_status": true
  },
  "title_bar": {
    "show_menus": true,
    "show_branch_icon": true
  },
  "close_on_file_delete": true,
  "prettier": {
    "allowed": true
  },
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "updateImportsOnFileMove": {
            "enabled": "always"
          }
        },
        "javascript": {
          "updateImportsOnFileMove": {
            "enabled": "always"
          }
        }
      },
      "enable_lsp_tasks": true
    }
  },
  "always_treat_brackets_as_autoclosed": true,
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "soft_wrap": "preferred_line_length",
  "vim": {
    "use_smartcase_find": true
  },
  "toolbar": {
    "code_actions": true
  },
  "hover_popover_delay": 200,
  "vertical_scroll_margin": 0.0,
  "which_key": {
    "delay_ms": 250,
    "enabled": true
  },
  "session": {
    "trust_all_worktrees": true
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "format_on_save": "off",
  "show_whitespaces": "selection",
  "minimap": {
    "show": "always",
  },
  "edit_predictions": {
    "provider": "copilot",
    "mode": "eager",
  },
  "colorize_brackets": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "buffer_font_size": 16,
  "theme": "Catppuccin Mocha",
}
