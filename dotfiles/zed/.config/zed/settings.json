{
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "format_on_save": "off",
  "show_whitespaces": "selection",
  "minimap": {
    "show": "always",
  },
  "edit_predictions": {
    "mode": "subtle",
  },
  "colorize_brackets": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha",
  },
}
